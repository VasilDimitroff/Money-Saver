@using MoneySaver.Web.Models.Records
@using System.Globalization
@using MoneySaver.Web.Models.Records.Enums

@model RecordsWithWalletIdViewModel
@{
    this.ViewData["Title"] = "All Records - " + Model.Wallet;
    int counter = 0;
}
<!-- partial -->
<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Wallet - All Records</h4>
        <div class="row pb-5">
            <vc:add-record wallet-id="@Model.WalletId"></vc:add-record>
            <div class="btn-group mr-2">
                <button type="button" class="btn btn-light"><i class="mdi mdi-alert-circle-outline"></i></button>
                <button type="button" class="btn btn-light"><i class="mdi mdi-delete-empty"></i></button>
            </div>
            <div class="btn-group mr-2">
                <button type="button" class="btn btn-light"><i class="mdi mdi-printer"></i></button>
            </div>
            <div class="btn-group ml-auto mr-2 border-0 d-none d-md-block">
                <input type="text" class="form-control" placeholder="Search Here">
            </div>
            <div class="btn-group">
                <button type="button" class="btn btn-light"><i class="mdi mdi-cloud"></i></button>
                <button type="button" class="btn btn-light"><i class="mdi mdi-dots-vertical"></i></button>
            </div>
        </div>
        <div class="col-12">
            <div class="table-responsive">
                <table id="order-listing" class="table">
                    <thead>
                        <tr>
                            <th>Added On</th>
                            <th>Description</th>
                            <th>Type</th>
                            <th>Amount</th>
                            <th>Wallet</th>
                            <th>Category</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var record in Model.Records)
                        {
                        <tr  class="card-shadow">
                            <td>@record.CreatedOn.ToLocalTime()</td>
                            <td style="width: 25%;">@record.Description</td>
                            <td>
                            @if (record.Type == RecordTypeInputModel.Expense)
                            {
                               <span class="badge badge-danger">@record.Type</span>
                            }

                            else if (record.Type == RecordTypeInputModel.Income)
                            {

                                <span class="badge badge-success">@record.Type</span>
                            }
                             </td>

                             <td>
                                 @if (record.Amount < 0)
                                 {
                                     <p class="text-danger"><strong>@record.Amount.ToString("f2") @record.Currency</strong></p>
                                 }

                                 else
                                 {
                                     <p class="text-success bold"><strong>@record.Amount.ToString("f2") @record.Currency</strong></p>
                                 }
                             </td>
                             <td>@record.Wallet</td>
                             <td>
                                    @if (counter % 5 == 0)
                                    {
                                        <a href="/Categories/Details?categoryId=@record.CategoryId" class="badge badge-warning">@record.Category</a>
                                    }

                                    else if (counter % 3 == 0)
                                    {
                                        <a href="/Categories/Details?categoryId=@record.CategoryId" class="badge badge-success">@record.Category</a>
                                    }

                                    else if (counter % 2 == 0)
                                    {
                                        <a href="/Categories/Details?categoryId=@record.CategoryId" class="badge badge-primary">@record.Category</a>
                                    }

                                    else if (counter % 2 != 1)
                                    {
                                        <a href="/Categories/Details?categoryId=@record.CategoryId" class="badge badge-info">@record.Category</a>
                                    }

                                    else
                                    {
                                        <a href="/Categories/Details?categoryId=@record.CategoryId" class="badge badge-danger">@record.Category</a>
                                    }

                                    @{counter++; }

                                </td>
                                <td>
                                    <span class="btn btn-secondary">Edit</span>
                                </td>
                                <td>
                                    <span class="btn btn-danger">Delete</span>
                                </td>

                            </tr>
                        }          
                    </tbody>
                </table>
                <!-- Pagination-->
                <div class="d-flex justify-content-center pt-5">
                    <nav>
                        <ul class="pagination rounded-flat pagination-success">
                            <li class="page-item"><a class="page-link" href="#"><i class="mdi mdi-chevron-left"></i></a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">4</a></li>
                            <li class="page-item"><a class="page-link" href="#"><i class="mdi mdi-chevron-right"></i></a></li>
                        </ul>
                    </nav>
                </div>
                <!-- End Pagination-->
            </div>
        </div>
    </div>
</div>
<!-- content-wrapper ends -->
@section Scripts {
<script>$(document).ready(function () {
        // executes when HTML-Document is loaded and DOM is ready
        console.log("document is ready");


        $(".card-shadow").hover(
            function () {
                $(this).addClass('shadow-sm').css('cursor', 'pointer');
            }, function () {
                $(this).removeClass('shadow-sm');
            }
        );

        // document ready  
});
</script>
}
