@using MoneySaver.Web.ViewModels.Wallets
@using System.Globalization


@model StatisticsWalletViewModel
@{
    this.ViewData["Title"] = "Statistics - " + Model.WalletName;
    string badgeClassName = string.Empty;
}
<!-- partial -->
<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.WalletName - Incomes & Expenses Report</h4>
        <p><i class="fa fa-wallet"></i>Current amount of @Model.WalletName:</p>
        <br />
        @if (Model.TotalAmount < 0)
        {
            badgeClassName = "danger";
        }

        else if (Model.TotalAmount == 0)
        {
            badgeClassName = "secondary";
        }

        else
        {
            badgeClassName = "success";
        }
    <h2> <span class="text-@badgeClassName">@Model.TotalAmount @Model.Currency</span></h2>
        <br /> <br />
               <div class="row pb-5">   
                       <vc:add-record wallet-id="@Model.WalletId"></vc:add-record>
                       <vc:all-records-by-wallet wallet-id="@Model.WalletId"></vc:all-records-by-wallet>
               </div>
        <div class="col-12">
            <div class="table-responsive">
                <table id="order-listing" class="table text-center">
                    <thead>
                        <tr>
                            <th>Category</th>
                            <th>Records</th>
                            <th>Incomes</th>
                            <th>Expenses</th>
                            <th>Last Added</th>
                            <th>Edit/Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model.Categories)
                        {
                            <tr class="card-shadow" onclick="window.location='/Category/Edit/@category.Id'">
                                <td><a href="/Categories/Details/@category.Id" class="badge badge-primary">@category.Name</a></td>
                                <td>
                                    <a href="/Categories/Details/@category.Id"><span class="badge badge-warning text-light">@category.TotalRecordsCount</span></a>
                                </td>

                                <td>
                                    @if (category.TotalIncomesAmount == 0)
                                    {
                                        badgeClassName = "secondary";
                                    }

                                    else
                                    {
                                        badgeClassName = "success";
                                    }
                                    <span class="text-@badgeClassName"><strong>+ @category.TotalIncomesAmount @Model.Currency</strong></span>
                                </td>
                                <td>
                                    @if (category.TotalExpensesAmount == 0)
                                    {
                                        badgeClassName = "secondary";
                                    }

                                    else
                                    {
                                        badgeClassName = "danger";
                                    }
                                    <span class="text-@badgeClassName"><strong>@category.TotalExpensesAmount @Model.Currency</strong></span>
                                </td>
                                <td><span class="badge badge-outline-primary" data-toggle="tooltip" data-placement="bottom" title="Last added on"> @Model.ModifiedOn</span></td>
                               

                                    <td>
                                        <a href="/Category/Edit/@category.Id"><span class="btn btn-outline-info btn-sm btn-icon-text" data-toggle="tooltip" data-placement="bottom" title="Edit record"><i class="mdi mdi-pencil btn-icon-prepend"></i>Edit</span></a>
                                        &nbsp;
                                        <!--<span class="btn btn-secondary btn-sm"><i class="fa fa-edit"></i> Edit</span>-->
                                    </td>
</tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td class="font-weight-bolder"><span class="badge badge-outline-dark">Total:</span></td>
                            <td><a href="/Wallets/Records/@Model.WalletId"<span class="badge badge-outline-warning">@Model.RecordsCount</span></a></td>
                            <td>
                                @if (Model.Incomes == 0)
                                {
                                    badgeClassName = "secondary";
                                }

                                else
                                {
                                    badgeClassName = "success";
                                }
                                <span class="text-@badgeClassName font-weight-bolder badge badge-outline-@badgeClassName">+ @Model.Incomes @Model.Currency</span>
                            </td>
                            <td>
                                @if (Model.Outcomes == 0)
                                {
                                    badgeClassName = "secondary";
                                }

                                else
                                {
                                    badgeClassName = "danger";
                                }
                                <span class="text-@badgeClassName font-weight-bolder badge badge-outline-@badgeClassName">@Model.Outcomes @Model.Currency</span>
                            </td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
                @if (Model.Categories.Count() == 0)
                {
                    <br />
                    <div class="alert alert-warning" role="alert">
                        <span>There are no categories in wallet <strong>"@Model.WalletName</strong>".</span>
                    </div>

                    <a href="javascript:history.back()" class="btn btn-primary">Back</a>
                }
                <!-- Pagination-->
                <div class="d-flex justify-content-center pt-5">
                    <nav>
                        <ul class="pagination rounded-flat pagination-success">
                            <li class="page-item"><a class="page-link" href="#"><i class="mdi mdi-chevron-left"></i></a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">4</a></li>
                            <li class="page-item"><a class="page-link" href="#"><i class="mdi mdi-chevron-right"></i></a></li>
                        </ul>
                    </nav>
                </div>
                <!-- End Pagination-->
            </div>
        </div>
    </div>
</div>
<!-- content-wrapper ends -->
@section Scripts {
    <script>
        $(document).ready(function () {
            // executes when HTML-Document is loaded and DOM is ready
            console.log("document is ready");


            $(".card-shadow").hover(
                function () {
                    $(this).addClass('shadow-sm').css('cursor', 'pointer');
                }, function () {
                    $(this).removeClass('shadow-sm');
                }
            );

            // document ready
        });

    </script>





    <script src="~/js/formpickers.js"></script>
    <script src="~/js/form-addons.js"></script>
    <script src="~/js/x-editable.js"></script>
    <script src="~/js/dropify.js"></script>
    <script src="~/js/dropzone.js"></script>
    <script src="~/js/jquery-file-upload.js"></script>
    <script src="~/js/formpickers.js"></script>
    <script src="~/js/form-repeater.js"></script>

}
