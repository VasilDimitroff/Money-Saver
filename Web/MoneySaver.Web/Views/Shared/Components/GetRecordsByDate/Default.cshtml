@model MoneySaver.Web.ViewModels.ViewComponents.GetRecordsByDateComponentViewModel
<form method="get" asp-controller="Wallets" asp-action="DateSorted" class="form-inline">
    <div class="input-group-sm mr-sm-1 mb-4">
        <input type="date" style="display:inline;" class="form-control input-sm " asp-for="StartDate" placeholder="Search Here" value="@Model.StartDate">
    </div>
    <div class="input-group-sm mr-sm-1 mb-4">
        <input type="date" style="display:inline;" class="form-control input-sm" asp-for="EndDate" placeholder="Search Here" value="@Model.EndDate">
    </div>
    <input type="hidden" class="form-control input-sm" asp-for="Id">
    &nbsp;
    <div class="input-group-sm mr-sm-1 mb-4">
        <button style="display:inline;" type="submit" class="btn btn-primary btn-sm"><i class="mdi mdi-magnify btn-icon-prepend text-white"></i></button>
    </div>
</form>


