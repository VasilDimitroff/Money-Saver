@model MoneySaver.Web.Models.ViewComponents.GetRecordsByDateComponentViewModel

<form method="post" asp-controller="Wallets" asp-action="DateSorted">
    <span style="float: left;">
        <input type="date" class="form-control" asp-for="StartDate" placeholder="Search Here" value="@Model.DefaultStartDate.ToString("yyyy-MM-dd")">
    </span>

    <span style="float: left;">
        <input type="date" class="form-control" asp-for="EndDate" placeholder="Search Here" value="@Model.DefaultEndDate.ToString("yyyy-MM-dd")">
    </span>

    <input type="hidden" class="form-control" asp-for="@Model.Id">
    &nbsp;
    <input class="btn btn-primary btn-sm" type="submit" value="Search" />
</form>


