@using MoneySaver.Web.ViewModels.Investments

@model AddInvestmentWalletInputModel
@{
    this.ViewData["Title"] = "Add Trade";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="template-demo mb-5">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-custom bg-inverse-primary">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Trades" asp-action="All">Trades</a></li>
                        <li class="breadcrumb-item active" aria-current="page"><span>Add Trade</span></li>
                    </ol>
                </nav>
            </div>
            <p class="card-title">
                Add new Trade
            </p>
            <form class="forms-sample" asp-controller="Trades" asp-action="Add" method="post">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="form-group">
                    <span class="mdi mdi-cash text-primary"></span>
                    <label asp-for="@Model.SelectedCurrencyId">Currency</label>
                    <select asp-for="@Model.SelectedCurrencyId" class="js-example-basic-single" style="width:100%">
                        <option disabled selected>-- Select the currency of the trade --</option>
                        @foreach (var currency in Model.Currencies)
                        {
                            <option value="@currency.CurrencyId">@currency.Name (@currency.Code)</option>
                        }
                    </select>
                    <span class="text-danger" asp-validation-for="@Model.SelectedCurrencyId"></span>
                </div>
                <div class="form-group">
                    <span class="mdi mdi-currency-usd text-primary"></span>
                    <label asp-for="@Model.Price"><span class="font-weight-bold">Price per share</span></label>
                    <input type="number" class="form-control form-control-lg" asp-for="@Model.Price" placeholder="Price per share" value="0">
                    <span class="text-danger" asp-validation-for="@Model.Price"></span>
                </div>
                <div class="form-group">
                    <span class="mdi mdi-hexagon-multiple text-primary"></span>
                    <label asp-for="@Model.Quantity"><span class="font-weight-bold">Quantity</span></label>
                    <input type="text" class="form-control form-control-lg" asp-for="@Model.Quantity" placeholder="Quantity">
                    <span class="text-danger" asp-validation-for="@Model.Quantity"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-sm mr-2 mdi mdi-check text-light">
                    Add Trade
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/vendors/js/vendor.bundle.addons.js"></script>
    <script src="~/js/select2.js"></script>
}