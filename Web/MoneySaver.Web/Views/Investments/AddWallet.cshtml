@using MoneySaver.Web.ViewModels.Investments

@model AddInvestmentWalletInputModel
@{
    this.ViewData["Title"] = "Add Investment Wallet";
}
<div class="bg-white">
    <div class="template-demo mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-custom bg-inverse-primary">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Investments" asp-action="All">Investment Wallets</a></li>
                <li class="breadcrumb-item active" aria-current="page"><span>Add New</span></li>
            </ol>
        </nav>
    </div>
</div>
<div class="row mb-4">
    <div class="col-12">
        <div class="form-inline d-flex justify-content-center h3">
            Add a new Investment Wallet
        </div>
    </div>
</div>
    <div class="card">
        <div class="card-body">
            <form class="forms-sample" asp-controller="Investments" asp-action="AddWallet" method="post">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="form-group">
                    <span class="mdi mdi-lead-pencil text-primary"></span>
                    <label asp-for="@Model.Name"><span class="font-weight-bold">Name</span></label>
                    <input type="text" class="form-control form-control-lg" asp-for="@Model.Name" placeholder="Name">
                    <span class="text-danger" asp-validation-for="@Model.Name"></span>
                </div>
                <div class="form-group">
                    <span class="mdi mdi-cash text-primary"></span>
                    <label asp-for="@Model.SelectedCurrencyId">Currency</label>
                    <p><small class="text-muted mt-1">Note! All trades in this investment wallet should be in the chosen currency.</small></p>
                    <select asp-for="@Model.SelectedCurrencyId" class="js-example-basic-single" style="width:100%">
                        <option disabled selected>-- Select the currency of the trade --</option>
                        @foreach (var currency in Model.Currencies)
                        {
                            <option value="@currency.CurrencyId">@currency.Name (@currency.Code)</option>
                        }
                    </select>
                    <span class="text-danger" asp-validation-for="@Model.SelectedCurrencyId"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-sm mr-2 mdi mdi-check text-light">
                    Add Investment Wallet
                </button>
            </form>
        </div>
    </div>

@section Scripts {
    <script src="~/vendors/js/vendor.bundle.addons.js"></script>
    <script src="~/js/select2.js"></script>
}